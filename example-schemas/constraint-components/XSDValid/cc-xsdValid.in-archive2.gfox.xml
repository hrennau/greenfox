<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of XSDValid constraints. This example checks resources contained by an 
    archive file, and it uses an XSD itself contained by an archive file.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/xsdvalid">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>
    
    <domain path="${domain}" name="greenfox-example-data">
        
        <!-- VISIT archive contents: output folder -->
        <folder navigateFOX="archives\input-output-config.zip\#archive#\input-output-config\output"
              id="outputFolderShape">
            <targetSize countMsg="Missing folder: output" count="1"/>

            <!-- VISIT archive contents: XML files -->
            <file navigateFOX="*.xml" id="responseFileShape">
                <targetSize minCountMsg="At least two responses expected" minCount="2"/>
                
                <!-- CHECK: XSD valid? -->
                <xsdValid xsdFOX="$domain\archives\xsd.zip\#archive#\xsd\schema-foo-article.xsd"
                      xsdValidMsg="Response msg not XSD valid"/>                
            </file>
        </folder>
    </domain>

</greenfox>
