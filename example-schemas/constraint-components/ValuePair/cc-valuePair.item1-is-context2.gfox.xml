<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of ValuePair constraints: declares a ValuePairGe contraint. As the
    'exprContext2' option is set to '#item', the second expression is reevaluated in the
    context of each item returned by the first expression.
    
    In this example, date consistencies are checked:
    - project end date must be greater or equal the project start date
    - milestone dates must be greater or equal the project start date 
    - milestone dates must be less or equal the project end date.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value-pair.item1-is-context2">

    <context>
        <!-- Default domain -->
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        
        <!-- VISIT: folder 'constraint-ValuePair' -->
        <folder navigateFOX="constraint-ValuePair" id="valuePairFolderShape">
            <targetSize countMsg="Missing folder: constraint-ValuePair" count="1"/>
            
            <!-- VISIT: file 'projectDates.xml'" -->
            <file navigateFOX="*projectDates*.xml except _hide*" id="projectDatesShape">
                <targetSize minCount="1" minCountMsg="Missing file: projectDates.xml"/>
                
                <!-- CHECK: end dates >= start dates, milestone dates >= start dates, milestone dates <= end dates -->
                <valuePairs>
                    <valuePair expr1XP="//project/@endDate"
                          minCount1="0"
                          expr2XP="../@startDate"
                          count2="1"
                          expr2Context="item"
                          cmp="ge"
                          cmpMsg="Project end date must be greater or equal project start date"/>
                    <valuePair expr1XP="//milestone/@date"
                          minCount1="0"
                          expr2XP="../../@startDate"
                          count2="1"
                          expr2Context="item"
                          cmp="ge"
                          cmpMsg="Milestone date must be greater or equal project start date"/>
                    <valuePair expr1XP="//milestone/@date"
                          minCount1="0"
                          expr2XP="../../@endDate"
                          minCount2="0"
                          expr2Context="item"
                          cmp="le"
                          cmpMsg="Milestone date must be less or equal project end date"/>
                </valuePairs>
            </file>
        </folder>
    </domain>

</greenfox>
