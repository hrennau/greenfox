<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of ValuePair constraints: declares a ValuePairEq contraint. 
    
    As the @quant option 'someForEach' is used, for each item from value 1 at least 
    one item from value 2 must match.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value-pair.quant-someForEach">

    <context>
        <!-- Default domain -->
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        
        <!-- VISIT: folder 'constraint-ValuePair' -->
        <folder navigateFOX="constraint-ValuePair" id="valuePairFolderShape">
            <targetSize countMsg="Missing folder: constraint-ValuePair" count="1"/>
            
            <!-- VISIT: file 'projectDates.xml'" -->
            <file navigateFOX="*projectDates*.xml except _hide*" id="projectDatesShape">
                <targetSize minCount="1" minCountMsg="Missing file: projectDates.xml"/>
                
                <!-- CHECK: for each end date a milestone with that date -->
                <valuePairs>
                    <!-- For each endDate there must be at least milestone with the same date -->
                    <valuePair expr1XP="//project/@endDate"
                          minCount1="0"
                          expr2XP="../milestone/@date"
                          minCount2="1"
                          expr2Context="item"
                          quant="someForEach"
                          useDatatype="date"
                          cmp="eq"
                          cmpMsg="For each Project end date there must be at least milestone with the same date."/>
                </valuePairs>
            </file>
        </folder>
    </domain>

</greenfox>
