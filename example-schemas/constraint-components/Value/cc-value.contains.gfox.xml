<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Value constraints. Declares a ValueContains constraint. 
    
    The expression value must contain each term from the term list in contains/term.
    Note that the expression value may also contain other terms.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value.contains">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="projectDates" id="projectDatesFolderShape">
            <targetSize countMsg="Missing folder: projectDates" count="1"/>            
            <file navigateFOX="projectDates.xml" id="projectDatesShape">
                <targetSize count="1" countMsg="Missing file: projectDates.xml"/>
                <values>
                    <value exprXP="/projects/project/@name"
                      containsMsg="Expected projects missing.">
                        <contains>
                            <term>P1</term>
                            <term>P2</term>
                            <term>P3</term>
                            <term>YY1</term>
                        </contains>
                    </value>
                </values>
            </file>
        </folder>
    </domain>

</greenfox>
