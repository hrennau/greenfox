<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Value constraints. Declares a ValueMaxLength and a ValueCount constraint.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value.maxLength">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="projectDates" id="projectDatesFolderShape">
            <targetSize countMsg="Missing folder: projectDates" count="1"/>            
            <file navigateFOX="projectDates.xml" id="projectDatesShape">
                <targetSize count="1" countMsg="Missing file: projectDates.xml"/>
                <values>
                    <value exprXP="/projects/@department"
                      count="1"
                      countMsg="Missing @department attribute."
                      maxLength="8"
                      maxLengthMsg="Department ID must not have more then 8 characters"/>
                </values>
            </file>
        </folder>
    </domain>

</greenfox>
