<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of ValuePair constraints: declares a ValuePairIn contraint.
    
    All items of value 1 must be equal to an item from value 2. Here, invalid references
    are detected: all @country references in <city> elements must be an @id value in <country>.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/value-pair.in">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="airports" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports" count="1"/>            
            <file navigateFOX="airports-*.xml" id="airportsFileShape">
                <targetSize minCount="1" minCountMsg="Missing file: airports-ireland.xml"/>
                <foxvaluePairs>
                    <foxvaluePair expr1XP="/airports/airport/@iata"
                             expr2FOX="..\*\airport-*.xml\replace(file-name(.), '^airport-(.*)\.xml', '$1')"
                             useString="lc"
                             cmp="in"
                             cmpMsg="For each IATA code one file expected."
                             minCount1="1"
                             minCount1Msg="Expected more airports."
                             minCount2="10"
                             minCount2Msg="Expected more countries."/>
                </foxvaluePairs>
            </file>
        </folder>
    </domain>

</greenfox>
