<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of FoxvaluePair constraints: declares a FoxvaluePairIncludes contraint.
    
    All items of value 1 must be equal to an item from value 2. Here, all cities from the
    factbook document must be found in a CSV file.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue-includes"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="factbook" id="factbookFolderShape">
            <targetSize countMsg="Missing folder: factbook" count="1"/>            
            <file foxpath="factbook2.xml" id="factbookFileShape">
                <targetSize minCount="1" minCountMsg="Missing file: factbook.xml"/>
                <foxvaluePairs>
                    <foxvaluePair expr1XP="//city/name[1]"
                                  expr2FOX="..\countries\*.csv\csv-doc(.)/csv/record/*[3]"
                                  cmp="includes"
                                  minCount1="100" minCount1Msg="Expected more factbook cities."
                                  minCount2="3000" minCount2Msg="Expected more country csv cities."/>
                </foxvaluePairs>
            </file>
        </folder>
    </domain>

</greenfox>
