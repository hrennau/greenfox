<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueExists contraint.
    
    The value must not be empty.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.exists">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml[//name eq 'Galway Airport' and //city eq 'Galway']"
                      exists="true"
                      existsMsg="No resource found for airport 'Galway Airport'."/>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
