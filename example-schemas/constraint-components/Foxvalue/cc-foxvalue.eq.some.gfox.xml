<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueEq contraint. 
    As the quantifier 'some' is used, conformance requires only at least one value 
    item to be equal to the value provided by @eq. By contrast, the default quantifier 
    'all' requires all value items to match.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.eq.some">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml//city"
                      quant="some"
                      minCount="1"
                      minCountMsg="At least one city expected."
                      eq="Dublin"
                      eqMsg="Cities must contain city 'Dublin'."/>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
