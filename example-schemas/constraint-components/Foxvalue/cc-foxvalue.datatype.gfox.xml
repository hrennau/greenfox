<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueDatatype contraint.
    The constraint is used to ensure that 'latitude' and 'longitude' values are decimal.
    
    The value items must be castable to the datatype provided by @datatype. Type names
    without prefix are assumed to be in the XSD namespace.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.datatype">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml//(latitude, longitude)"
                      minCount="1"
                      minCountMsg="At least one airport expected."
                      datatype="decimal"
                      datatypeMsg="Latitude and longitude values must be decimal."/>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
