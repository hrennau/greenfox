<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueItemsUnique constraint. 
    As the 'useDatatype' option is not used, value items are compared as strings, rather than
    numbers.
    
    The value items must be distinct, that is, there must not be two equal items.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.distinct">

    <context>
        <!-- Default domain -->
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        
        <!-- VISIT: folder 'ireland' -->
        <folder navigateFOX="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            
            <!-- CHECK: latitude and longitude values in the folder are distinct -->
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml//latitude"
                      minCount="1"
                      minCountMsg="At least one latitude expected."
                      distinct="true"
                      distinctMsg="Data error - latitudes must be unique."
                      datatype="decimal"
                      datatypeMsg="Latitude must be a decimal value">
                </foxvalue>
                <foxvalue exprFOX=".\\airport-*.xml//longitude"
                      minCount="1"
                      minCountMsg="At least one longitude expected."
                      distinct="true"
                      distinctMsg="Data error - longitude must be unique."
                      datatype="decimal"
                      datatypeMsg="Longitude must be a decimal value">
                </foxvalue>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
