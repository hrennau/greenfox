<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueEq contraint.
    
    All value items must be equal to the value provided by @eq.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.eq">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml//country"
                      minCount="1"
                      minCountMsg="At least one country value expected."
                      eq="Ireland"
                      eqMsg="Airports in the ireland folder must have country 'Ireland'."/>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
