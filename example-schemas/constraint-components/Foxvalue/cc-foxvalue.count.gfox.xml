<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueCount contraint.
    
    The number of value items must be equal to the value provided by @count.
-->
<greenfox greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.count"
          xmlns="http://www.greenfox.org/ns/schema">

    <context>
        <field name="domain" value="${schemaPath}\..\..\..\..\example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder foxpath="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml[//type eq 'airport']"
                          count="15" countMsg="Not the expected number of airports."/>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
