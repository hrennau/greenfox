<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueIn contraint.
    
    The value items must match a term comparison from the list contained by the 
    <in> element. Term comparisons can be <eq>, <ne>, <like>, <notLike>, <matches> 
    and <notMatches> elements.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.in">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml//city"
                      minCount="1"
                      minCountMsg="At least one city value expected."
                      inMsg="Unexpected city.">
                    <in>
                        <eq>Bantry</eq>
                        <eq>Connaught</eq>
                        <eq>Cork</eq>
                        <eq>Dongloe</eq>
                        <eq>Dublin</eq>
                        <eq>Galway</eq>
                        <eq>Indreabhan</eq>
                        <eq>Inis Mor</eq>
                        <eq>Inisheer</eq>
                        <eq>Inishmaan</eq>
                        <eq>Kerry</eq>
                        <eq>Shannon</eq>
                        <eq>Sligo</eq>
                        <eq>Waterford</eq>
                    </in>
                </foxvalue>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
