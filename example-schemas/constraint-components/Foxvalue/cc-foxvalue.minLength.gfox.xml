<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueMinLength contraint. The
    constraint is used in order to detect empty elements.
    
    The value items must have a length greater than or equal to the length provided by @minLength.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.minLength">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml//*[not(*)]"
                      minCount="1"
                      minCountMsg="At least one data member expected."
                      minLength="1"
                      minLengthMsg="Data members must not be empty."/>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
