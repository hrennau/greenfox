<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Demonstrates the use of Foxvalue constraints: declares a FoxvalueNotMatches contraint.
    
    The value items must not match the regular expression provided by @notMatches.
-->
<greenfox xmlns="http://www.greenfox.org/ns/schema"
          greenfoxURI="http://www.greenfox.org/ns/schema-examples/demo-constraint-component/foxvalue.notMatches">

    <context>
        <field name="domain" value="${schemaURI}/../../../../example-data"/>
    </context>

    <domain path="${domain}" name="greenfox-example-data">
        <folder navigateFOX="airports\ireland" id="airportsFolderShape">
            <targetSize countMsg="Missing folder: airports/ireland" count="1"/>
            <foxvalues>
                <foxvalue exprFOX=".\\airport-*.xml//source1"
                      minCount="1"
                      minCountMsg="At least one source1 value expected."
                      notMatches="^.+#"
                      notMatchesMsg="Source1 value must not contain # character in non-initial position."/>
            </foxvalues>            
        </folder>
    </domain>

</greenfox>
